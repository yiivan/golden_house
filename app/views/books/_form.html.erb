<%= @book.errors.full_messages.join(", ") %>

<%= simple_form_for @book do |f| %>
  <%= f.input :isbn, label: "ISBN" %>
  <%= f.input :title %>
  <%= f.input :author %>
  <%= f.input :publisher %>
  <%= f.input :published_date, as: :string, input_html: {class: "datepicker"} %>
  <%= f.input :number_of_pages %>
  <%= f.association :category %>
  <%= f.association :language %>
  <%= f.input :image, label: "Cover Image" %>

  <% if @book.id %>
    <%= link_to "Cancel", book_path(@book), class: "btn btn-danger" %>
  <% else %>
    <%= link_to "Cancel", new_my_book_path, class: "btn btn-danger" %>
  <% end %>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
