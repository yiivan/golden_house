<div id="<%= dom_id(memo) %>" class="well well-lg">
  <p style="color:grey">
    Created on: <%= memo.created_at.strftime("%B %d, %Y") %>
    &nbsp;&nbsp;
    Updated on: <%= memo.updated_at.strftime("%B %d, %Y") %>
  </p>
  <%= memo.body %>

  <% memo.segments.each do |segm| %>
    <h3><strong><%= segm.title %></strong></h3>
    <p><%= segm.body %></p>
  <% end  %>
  <div>
    <% if memo.public %>
      Likes:(<%= memo.likes.count %>)
    <% end %>
  </div>

  <% if can? :edit, memo %>
    <%= link_to "Edit", edit_my_book_memo_path(@book, memo),
                        class: "btn btn-primary btn-sm",
                        remote: true %>
  <% end %>

  <% if can? :destroy, memo %>
    <%= link_to "Delete", my_book_memo_path(@book, memo),
                          method: :delete,
                          data: {confirm: "Are you sure you want to delete this memo?"},
                          class: "btn btn-primary btn-sm",
                          remote: true %>
  <% end %>
</div>
