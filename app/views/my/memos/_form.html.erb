<%= simple_form_for [:my, @book, memo], remote: true do |f| %>
  <%= f.input :body, label: "Memo", input_html: {id: "memo-editor-#{dom_id(memo)}",
                                                 ckeditor: {toolbar: "Full"}} %>

  <div class="public-checkbox">
    <%= f.input :public, label: "Do you want to share this memo with the public?" %>
  </div>

  <div class="cancel-create-update-memo-buttons">
    <% if memo.id %>
      <button type="button" class="cancel-button btn btn-danger" data-memo-id="<%= dom_id(memo) %>">Cancel</button>
    <% end %>

    <%= f.submit data: {disable_with: "submitting..."}, class: "btn btn-primary" %>
  </div>
<% end %>

<%= memo.errors.full_messages.join(", ") %>
<br>
