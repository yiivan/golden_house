<h1 class="page-title">My Favorite Books</h1>

<div class="col-xs-12 books-pagination">
  <%= paginate @books %>
  <%= page_entries_info @books %>
</div>

<div class="books-row">
  <% counter = 0 %>
  <% @books.each do |favbook| %>
    <div id="book-<%= counter %>" class="book col-xs-6 col-sm-3 col-md-2 col-lg-1p5">
      <%= link_to book_path(favbook) do %>
        <div class="book-image">
          <% if favbook.image.present? %>
            <%= image_tag favbook.image.url(:small) %>
          <% end %>
        </div>
        <div class="book-title"><%= favbook.title_snippet %></div>
      <% end %>
    </div>
    <% counter += 1 %>
  <% end %>
</div>

<div class="col-xs-12 books-pagination">
  <%= paginate @books %>
  <%= page_entries_info @books %>
</div>
