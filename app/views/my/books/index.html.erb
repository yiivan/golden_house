<h1>My Books with Memos</h1>

<% counter = 0 %>
<% @books.each do |b| %>
  <div id="book-<%= counter %>" class="books" style="display:none">
    <%= link_to my_book_path(b) do %>
      <% if b.image.present? %>
        <%= image_tag b.image.url(:small) %>
      <% end %>
      <div><%= b.title %></div>
    <% end %>
  </div>
  <% counter += 1 %>
<% end %>
