<h1 class="page-title-user-session">Sign In</h1>

<%= form_tag sessions_path do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: "form-control" %>
  </div>
  <%= submit_tag "Sign In", class: "btn btn-primary" %>
<% end %>

<%= link_to "Guest Sign In (Demo)", guest_sessions_path, method: :post, class: "guest-sign-in-button btn btn-info" %>
